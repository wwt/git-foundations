{
    "name": "WWT git-foundations Dev Container",
    "build": {
        "dockerfile": "../Dockerfile.dev",
        "context": ".."
    },
    "extensions": [
        "docsmsft.docs-markdown",
        "docsmsft.docs-yaml",
        "davidanson.vscode-markdownlint",
        "redhat.vscode-yaml"
    ],
    "forwardPorts": [
        8000
    ],
    "settings": {
        "[yaml]": {
            "editor.insertSpaces": true,
            "editor.tabSize": 2,
            "editor.autoIndent": "keep",
            "editor.quickSuggestions": {
                "other": true,
                "comments": false,
                "strings": true
            }
        }
    }
}